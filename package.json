{
    "name": "jdre-cordova-app",
    "displayName": "JDRE Cordova app",
    "version": "1.0.0",
    "description": "A subscription based real estate app",
    "main": "index.js",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "remove": "rm JDRE.apk && rm JDRE-final.apk",
        "build": "cordova build --release android",
        "move": "mv ./platforms/android/app/build/outputs/apk/release/app-release-unsigned.apk ./",
        "rename": "mv app-release-unsigned.apk JDRE.apk",
        "sign": "jarsigner -verbose -sigalg SHA1withRSA -digestalg SHA1 -keystore JDRE.keystore JDRE.apk JDRE",
        "release": "npm run remove && npm run build && npm run move && npm run rename && npm run sign",
        "zip": "./zipalign -v 4 JDRE.apk JDRE-final.apk"
    },
    "author": "Apache Cordova Team",
    "license": "Apache-2.0",
    "dependencies": {
        "cordova-android": "^7.1.1",
        "cordova-ios": "^4.5.5",
        "cordova-plugin-device": "^2.0.2",
        "cordova-plugin-firebase": "^1.0.5",
        "cordova-plugin-geolocation": "^4.0.1",
        "cordova-plugin-inappbrowser": "^3.0.0",
        "cordova-plugin-whitelist": "^1.3.3"
    },
    "cordova": {
        "plugins": {
            "cordova-plugin-firebase": {},
            "cordova-plugin-geolocation": {},
            "cordova-plugin-inappbrowser": {},
            "cordova-plugin-whitelist": {},
            "cordova-plugin-device": {}
        },
        "platforms": [
            "android",
            "ios"
        ]
    }
}